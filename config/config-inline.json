{
  "checks": {
    "age": {
      "max-age": 90
    },
    "size": {
      "max-size": 500,
      "max-layers": 20
    },
    "ports": {
      "allowed-ports": [80, 443, 8080, 8443]
    },
    "registry": {
      "registry-policy": {
        "trusted-registries": ["index.docker.io", "docker.io", "ghcr.io", "gcr.io", "quay.io"]
      }
    },
    "root-user": {},
    "secrets": {
      "secrets-policy": {
        "check-env-vars": true,
        "check-files": true,
        "excluded-env-vars": ["PUBLIC_KEY", "SSH_PUBLIC_KEY"],
        "excluded-paths": ["/usr/share/**", "/var/log/**"]
      }
    },
    "labels": {
      "labels-policy": {
        "required-labels": [
          {"name": "maintainer"},
          {"name": "org.opencontainers.image.version", "pattern": "^v?\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?(\\+[a-zA-Z0-9.]+)?$"},
          {"name": "org.opencontainers.image.vendor", "value": "MyCompany"}
        ]
      }
    },
    "healthcheck": {},
    "platform": {
      "allowed-platforms": ["linux/amd64", "linux/arm64"]
    }
  }
}
